		"supertest": "^7.0.0",
		"ts-jest": "^29.1.2",
		"ts-node": "^10.9.2",
		"tsx": "^4.7.3",
		"typescript": "^4.5.2"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"setupFilesAfterEnv": [
			"./tests/_setupFile.ts"
		]
