		"jsonwebtoken": "^9.0.2",
		"mongoose": "^8.3.3",
		"morgan": "^1.10.0",
		"multer": "^1.4.5-lts.1",
		"pad": "^3.2.0",
		"path": "^0.12.7",
		"yup": "^1.4.0",
		"yup-password": "^0.4.0"
