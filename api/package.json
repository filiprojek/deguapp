		"@types/morgan": "^1.9.9",
		"@types/multer": "^1.4.11",
		"@types/shelljs": "^0.8.11",
		"@types/supertest": "^6.0.2",
		"@typescript-eslint/eslint-plugin": "^5.5.0",
		"@typescript-eslint/parser": "^5.5.0",
		"chai": "^4.3.4",
		"eslint": "^8.3.0",
